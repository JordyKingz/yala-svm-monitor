# üîê Solana Indexer Environment Secrets
# Solana Indexer CLI - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SOLANA RPC ENDPOINTS
# =============================================================================

# Primary Solana RPC URL (QuickNode recommended)
SOLANA_RPC_URL=
SOLANA_RPC_URL_2=
SOLANA_RPC_URL_3=

# Solana WebSocket URL (for real-time updates)
SOLANA_WS_URL=

# =============================================================================
# QUICKNODE CONFIGURATION
# =============================================================================

# QuickNode API Key (for enhanced features)
QUICK_NODE_API_KEY=

# QuickNode Solana RPC URL (if using QuickNode)
QUICK_NODE_SOLANA_RPC_URL=

# QuickNode WebSocket URL
QUICK_NODE_SOLANA_WS_URL=

# =============================================================================
# YELLOWSTONE GRPC CONFIGURATION
# =============================================================================

# Yellowstone gRPC endpoint URL
YELLOWSTONE_GRPC_URL=

# Yellowstone authentication token
YELLOWSTONE_AUTH_TOKEN=

# =============================================================================
# HELIUS CONFIGURATION (Optional)
# =============================================================================

# Helius API key
HELIUS_API_KEY=

# Helius RPC URL
HELIUS_RPC_URL=

# Helius WebSocket URL
HELIUS_WS_URL=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database URL (default)
DATABASE_URL=sqlite:solana_indexer.db

# Database connection configuration
DATABASE_MAX_CONNECTIONS=10
DATABASE_TIMEOUT_SECONDS=30
DATABASE_RETRY_ATTEMPTS=3

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Enable/disable caching
CACHE_ENABLED=true

# Cache size limits (in MB)
CACHE_L1_SIZE_MB=50
CACHE_L2_SIZE_MB=100
CACHE_L3_SIZE_MB=200
CACHE_L4_SIZE_MB=500

# Cache TTL settings (in seconds)
CACHE_L1_TTL_SECONDS=30
CACHE_L2_TTL_SECONDS=300
CACHE_L3_TTL_SECONDS=600
CACHE_L4_TTL_SECONDS=3600

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# IPFS API endpoint
IPFS_API_URL=http://localhost:5001

# IPFS gateway URL
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# IPFS timeout settings
IPFS_TIMEOUT_SECONDS=30
IPFS_RETRY_ATTEMPTS=3

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# gRPC server port
GRPC_SERVER_PORT=50051

# REST API server port
REST_API_PORT=3000

# Webhook listener port
WEBHOOK_PORT=8080

# Metrics server port
METRICS_PORT=9090

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook secret for authentication
WEBHOOK_SECRET=

# Webhook base URL
WEBHOOK_BASE_URL=

# Webhook endpoints
QUICKNODE_WEBHOOK_URL=
SOLANA_WEBHOOK_URL=
HELIUS_WEBHOOK_URL=

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Worker threads for async operations
WORKER_THREADS=4

# Async runtime threads
ASYNC_RUNTIME_THREADS=8

# RPC connection pool size
RPC_CONNECTION_POOL_SIZE=10

# HTTP client pool size
HTTP_CLIENT_POOL_SIZE=20

# Rate limiting
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_SECOND=1000
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Monitoring interval (in milliseconds)
MONITORING_INTERVAL_MS=2000

# Enable health checks
ENABLE_HEALTH_CHECKS=true

# Enable performance metrics
ENABLE_PERFORMANCE_METRICS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable colored output
ENABLE_COLORED_OUTPUT=true

# Enable structured logging
ENABLE_STRUCTURED_LOGGING=true

# Log file path (optional)
LOG_FILE_PATH=logs/solana_indexer.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for API authentication
JWT_SECRET=

# API key for external access
API_KEY=

# Enable TLS/SSL
ENABLE_TLS=false

# TLS certificate paths (if enabled)
TLS_CERT_PATH=./certs/cert.pem
TLS_KEY_PATH=./certs/key.pem

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable hot reload (for development)
ENABLE_HOT_RELOAD=false

# Development server port
DEV_SERVER_PORT=8000

# =============================================================================
# SPECIALIZED FEATURES
# =============================================================================

# Enable Flow blockchain monitoring
ENABLE_FLOW_MONITORING=false

# Flow RPC URL
FLOW_RPC_URL=

# Flow WebSocket URL
FLOW_WS_URL=

# Enable PumpFun monitoring
ENABLE_PUMPFUN_MONITORING=true

# PumpFun fee account
PUMPFUN_FEE_ACCOUNT=

# PumpFun program
PUMPFUN_PROGRAM=

# =============================================================================
# ADDITIONAL INTEGRATIONS & DATABASES
# =============================================================================

# Convex Database Configuration
CONVEX_DEPLOYMENT=
CONVEX_URL=

# Helius Transaction Services
HELIUS_PARSED_TX_URL=
HELIUS_TX_HISTORY_URL=

# Additional Database Options
POSTGRES_URL=
MONGODB_URL=

# SSL/TLS Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# EXAMPLES OF COMMON SETUPS
# =============================================================================

# QuickNode Setup Example:
# QUICKNODE_API_KEY=
# SOLANA_RPC_URL=

# Helius Setup Example:
# HELIUS_API_KEY=
# HELIUS_RPC_URL=

# Local Development Example:
# DEBUG=true
# VERBOSE=true
# LOG_LEVEL=debug
# ENABLE_HOT_RELOAD=true

# Production Setup Example:
# DEBUG=false
# VERBOSE=false
# LOG_LEVEL=info
# ENABLE_RATE_LIMITING=true
# ENABLE_TLS=true

# =============================================================================
# TARGET ADDRESSES FOR MONITORING
# =============================================================================

# LayerZero program address
LAYERZERO_ADDRESS=

# YU Token address (mint or program)
YU_TOKEN_ADDRESS=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Starting slot for monitoring (optional)
# If not set, will start from current slot or resume from last checkpoint
START_SLOT=

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Slack Webhook URL for notifications
SLACK_WEBHOOK_URL=